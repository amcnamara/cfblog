#!/bin/sh

BINSRC=$(dirname $0)

source $BINSRC/git-blog-constants.sh
source $BINSRC/git-blog-helpers.sh
source $BINSRC/git-blog-init.sh
source $BINSRC/git-blog-configure.sh
source $BINSRC/git-blog-add.sh
source $BINSRC/git-blog-build.sh
source $BINSRC/git-blog-publish.sh

check_dependencies

case $1 in
    init)
        initialize $2
        configure
        psuccess "Created new blog repo ${WHITE}$GIT_BASEDIR${NOCOLOUR}"
        ;;
    clone)
        clone $2
        ;;
    configure)
	is_gitblog
        configure
        ;;
    add)
	is_gitblog
        add $2
        ;;
    build)
	is_gitblog
        build
        ;;
    publish)
	is_gitblog
        publish
        ;;
    *)
        usage
        ;;
esac

exit 0
